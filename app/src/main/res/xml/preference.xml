<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="@string/pref_sort_default_value"
        android:entries="@array/list_preference_data"
        android:entryValues="@array/list_preference_data"
        android:key="@string/list_preference_key"
        android:title="Sort" />

    <EditTextPreference
        android:defaultValue="@string/pref_edit_default_value"
        android:inputType="text"
        android:key="@string/edit_preference_key"
        android:selectAllOnFocus="true"
        android:title="Search" />
</PreferenceScreen>